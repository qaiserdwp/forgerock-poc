{% extends "_layout.njk" %}
{% from "radios/macro.njk" import govukRadios %}
{% from "button/macro.njk" import govukButton %}
{% block content %}
<h1 class="govuk-heading-xl">How do you want to sign in?
    <span class="govuk-caption-m">You’ll need a Government Gateway or Google account and a mobile phone to<br>create a DWP account and sign in.</span>
</h1>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

{{ govukRadios({
idPrefix: "sign-in",
name: "sign-in",
items: [
{
value: "government-gateway",
text: "Sign in with Government Gateway",
label: {
classes: "govuk-label--s"
},
hint: {
text: "You’ll have a user ID if you’ve registered for Self Assessment or filed a tax return online before."
}
},

{
value: "govuk-verify",
text: "Sign in with Google",
label: {
classes: "govuk-label--s"
},
hint: {
text: "You’ll have an account if you use Gmail."
}
}
]
}) }}

{{ govukButton({
text: "Continue"
}) }}
    </div>
    <div class="govuk-grid-column-one-third"></div>
</div>
{% endblock %}
